<div class="container">
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task), class: 'text-decoration-none text-secondary' %>
        <% if task.completed %>
          <i class="fa-solid fa-square-check"></i>
        <% else  %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do  %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
    <%= link_to new_task_path(), class: 'text-decoration-none text-blue' do %>
    <i class="fa-solid fa-plus"></i> Add a new task
    <% end %>
</div>
